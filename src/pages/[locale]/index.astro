---
import Layout from '../../layouts/DefaultLayout.astro';
import HomeAnimation from '../../components/HomeAnimation.vue';
import { supportedLanguageCodes } from '@/i18n/utils'

export async function getStaticPaths() {
  return supportedLanguageCodes.map((langCode: string) => {
    return { params: { locale: langCode } }
  })
}

const { locale } = Astro.params
---
<Layout lang={locale}>
  <HomeAnimation client:only="vue"/>
</Layout>
