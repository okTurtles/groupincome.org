<style lang="scss">
@import "../styles/_variables";
@import "../styles/_mixins";

.c-wrapper {
  padding-bottom: 2rem;
}

.container {
  margin: 0 auto;
  padding: 2rem 1rem;
  display: flex;
  flex-direction: column;

  @include tablet {
    padding: 4rem 1rem;
  }

  @include desktop {
    padding: 6rem 1rem;
  }
}

.c-container-middle {
  width: 70rem;
  max-width: 100%;
  margin: 0 auto;
}

.c-container-center {
  text-align: center;
  margin: 6rem auto 0 auto;
}

.c-main-title {
  max-width: 47rem;
  margin: 1.5rem auto;

  @include phone {
    max-width: 30rem;
  }
}

.c-main-para {
  max-width: 46rem;
  margin-bottom: 1rem;

  @include desktop {
    margin: 0 auto 1rem auto;
  }
}

.grey-container {
  text-align: center;
}

.c-sub-title {
  margin-bottom: 2rem;
  font-style: normal;
  font-weight: bold;
  font-size: 18px;
}

.c-grid {
  display: grid;
  padding-bottom: 0;
  grid-template-rows: 1fr;

  @include desktop {
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto;
    grid-gap: 0 7.5rem;
  }
}

.c-direct {
  position: relative;
  // overflow: hidden;
  margin-bottom: 6rem;

  @include desktop {
    margin-bottom: 0;
  }
}

.c-or {
  position: absolute;
  display: flex;
  height: 24px;
  width: 100%;
  max-height: 435px;
  align-items: center;
  flex-direction: column;
  top: calc(100% + 2rem);
  color: rgba(#3E4462, .5);
  font-weight: 600;
  text-transform: uppercase;
  font-size: 12px;

  @include desktop {
    flex-direction: row;
    right: -4rem;
    top: 0;
    height: 100%;
    width: auto;
  }

  &::after,
  &::before {
    position: absolute;
    content: '';
    z-index: -1;
  }

  &::before {
    z-index: -2;
    background: linear-gradient(90deg, #FFFFFF 0%, #D0DEEA 51.56%, #FFFFFF 100%);
    height: 1px;
    width: 100%;
    top: .6rem;
    left: 0;

    @include desktop {
      background: linear-gradient(180deg, #FFFFFF 0%, #D0DEEA 51.56%, #FFFFFF 100%);
      height: 100%;
      width: 1px;
      top: 0;
      left: calc(50% - .5px);
    }
  }

  &::after {
    background: #F6F8FB;
    border-radius: 50%;
    overflow: hidden;
    width: 2rem;
    height: 2rem;
    top: calc(50% - 1rem);
    left: calc(50% - 1rem);
  }
}

.c-donation-box {
  filter: drop-shadow(0px 2px 6px rgba(0,0,0,.2));
}

.dark-container {
  background: url('/images/about/blue-background.svg') no-repeat center #fff;
  background-size: 100%;
  color: #fff;
  margin-top: 4rem;

  display: flex;
  flex-direction: column;
  align-items: center;

  @include phone {
    background-size: 200% 100%;
    padding-top: 8rem;
    padding-bottom: 4rem;
    margin-top: -4rem;
  }
}

.c-container-title {
  text-align: center;
  max-width: 45.5rem;
  margin-bottom: 1rem;
}

.c-silver-sponsor-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 4rem;
  margin-bottom: 2rem;

  @include desktop {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    max-width: 70rem;
    justify-content: center;
  }
}

.c-silver-sponsor {
  width: 22rem;
  display: flex;
  background-color: #C0C5DA;
  border-radius: .5rem;
  padding: .5rem;
  font-size: 1rem;
  color: #000;

  &:hover {
    background-color: #fff;
  }

  img {
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    margin-right: 1rem;
  }
}

.c-second-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: url('/images/temp/group-sponsor.jpg') no-repeat;
  background-size: contain;
  background-position: center 54px;
}

.c-individual-sponsor-container {
  background-color: #FBFCFD;
  color: #000000;
  margin: 4rem auto 0 auto;
  border-radius: .5rem;
  padding: .3rem 1.5rem 0 1.5rem;
  border: 1px solid #9DB5CA;

  ul {
    display: flex;
    flex-wrap: wrap;
    max-width: 70rem;
  }

  li {
    display: block;
    border-bottom: 1px solid #E8F0F6;
    min-width: 15.5rem;
    padding: 1rem 0;
    flex-grow: 1;
  }
}
</style>
